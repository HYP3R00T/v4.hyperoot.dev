---
import BaseLayout from "@/layouts/BaseLayout.astro";

import Intro from "@/components/common/Intro.astro";
import Social from "@/components/common/Social.astro";
import Articles from "@/components/article/Articles.astro";

import type { SideNavItem } from "@/lib/types";
import SideNav from "@/components/common/SideNav.astro";

const nav_item: SideNavItem[] = [
    {
        label: "Home",
        href: "/",
    },
    {
        label: "Articles",
        href: "/article",
    },
];
---

<BaseLayout>
    <div class="flex flex-col lg:flex-row flex-1">
        <div
            class="py-6 lg:py-20 px-4 lg:px-12 lg:w-2/5 lg:h-screen lg:sticky lg:top-0 flex flex-col lg:justify-between items-center lg:items-start"
        >
            <Intro />
            <SideNav {nav_item} />
            <Social />
        </div>
        <div class="lg:pt-[5.25rem] pb-6 lg:pb-20 px-4 lg:px-8 lg:w-3/5">
            <Articles />
        </div>
    </div>
</BaseLayout>
