---
import { Icon } from "astro-icon/components";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<div class="z-30 p-4 lg:p-20 flex flex-row-reverse items-center gap-3 lg:gap-6">
  <a
    href="/article"
    class="items-center justify-center aspect-square lg:h-16 cursor-pointer flex hover:text-current"
  >
    <Icon
      name="arrow-up"
      class="h-6 w-6 lg:h-5 lg:w-5 transition-transform duration-300 ease-in-out -rotate-90"
    />
  </a>
</div>
