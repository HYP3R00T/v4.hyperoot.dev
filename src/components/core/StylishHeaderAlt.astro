---
// Define all the props we'll need
const { title, titleMain = "Article", titleHover = "Article" } = Astro.props;

// Create a unique identifier for our script variables
const uniqueId = "name-" + Math.random().toString(36).substring(2, 9);
---

<div class="font-mono flex flex-col lg:flex-row flex-1 cursor-default">
  <h1
    class="sample text-7xl lg:text-9xl flex justify-center text-accent_red pt-16 lg:pt-0"
    id="name"
    data-main={titleMain}
    data-hover={titleHover}
  >
    {titleHover}
  </h1>
</div>

<style>
  @media (min-width: 1024px) {
    .sample {
      writing-mode: vertical-rl;
      text-orientation: sideways;
      transform: rotate(-180deg);
    }
  }
</style>

<script define:vars={{ titleMain, titleHover }}>
  document.addEventListener("astro:page-load", () => {
    const name = document.getElementById("name");

    name.addEventListener("mouseover", () => {
      name.innerText = titleMain;
      name.dataset.value = titleMain;
      const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
      let interval = null;
      let iteration = 0;
      clearInterval(interval);

      interval = setInterval(() => {
        name.innerText = name.innerText
          .split("")
          .map((letter, index) => {
            if (index < iteration) {
              return name.dataset.value[index];
            }
            return letters[Math.floor(Math.random() * 26)];
          })
          .join("");

        if (iteration >= name.dataset.value.length) {
          clearInterval(interval);
        }

        iteration += 1 / 3;
      }, 30);
    });

    name.addEventListener("mouseout", () => {
      name.innerText = titleHover;
      name.dataset.value = titleHover;
      const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
      let interval = null;
      let iteration = 0;
      clearInterval(interval);

      interval = setInterval(() => {
        name.innerText = name.innerText
          .split("")
          .map((letter, index) => {
            if (index < iteration) {
              return name.dataset.value[index];
            }
            return letters[Math.floor(Math.random() * 26)];
          })
          .join("");

        if (iteration >= name.dataset.value.length) {
          clearInterval(interval);
        }

        iteration += 1 / 3;
      }, 30);
    });
  });
</script>
